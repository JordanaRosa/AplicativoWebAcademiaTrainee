@model IEnumerable<AplicativoWebAcademiaTrainee.Models.PessoaModel>

@{
    ViewData["Title"] = "Pessoa";
}

<h1>Pessoa</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeFilhos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeFilhos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Situacao)
            </th>
            <td>
                <a asp-action="ChangeStatus" asp-route-id="@item.Codigo">Alterar Situação</a> |
                <a asp-action="Edit" asp-route-id="@item.Codigo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Codigo">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Codigo">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
