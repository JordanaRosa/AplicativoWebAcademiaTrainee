@model IEnumerable<AplicativoWebAcademiaTrainee.Models.PessoaModel>

@{
    ViewData["Title"] = "Cadastro de Pessoa";
}

<div class="text-center">
    <h1>Cadastro de Pessoas</h1>
    <p><a asp-action="Create" class="btn btn-outline-dark">Criar novo</a></p>
</div>

<table class="table table-striped">
    <thead class="table-dark" class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeFilhos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeFilhos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Situacao)
            </th>
            <td>
                <a asp-action="ChangeStatus" asp-route-id="@item.Codigo" class="badge rounded-pill bg-light text-dark">Alterar Situação</a> 
                <a asp-action="Edit" asp-route-id="@item.Codigo" class="badge rounded-pill bg-light text-dark">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.Codigo" class="badge rounded-pill bg-light text-dark">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.Codigo" class="badge rounded-pill bg-light text-dark">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
